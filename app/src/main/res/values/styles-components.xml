<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--region Buttons-->

    <!--region Primary-->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minHeight">@dimen/ds_button_height</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">@dimen/icon_button</item>
    </style>

    <style name="Button.Large">
        <item name="android:textAppearance">@style/Text.Button.Large</item>
        <item name="android:minHeight">@dimen/ds_button_height_large</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="iconSize">@dimen/icon_button_large</item>
    </style>

    <style name="Button.LargeAlt">
        <item name="android:textAppearance">@style/Text.Button.LargeAlt</item>
        <item name="android:minHeight">@dimen/ds_button_height_xlarge</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="android:textColor">@color/button_text_color_state</item>
        <item name="android:backgroundTint">@color/button_color_state</item>
        <item name="iconSize">@dimen/icon_button_large</item>
    </style>

    <style name="Button.Small">
        <item name="android:textAppearance">@style/Text.Button.Small</item>
        <item name="android:minHeight">@dimen/ds_button_height_small</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
        <item name="iconSize">@dimen/icon_button_small</item>
    </style>

    <style name="Button.Large.Red">
        <item name="theme">@style/RedTheme</item>
    </style>

    <style name="Button.Red">
        <item name="theme">@style/RedTheme</item>
    </style>

    <style name="Button.Grey">
        <item name="theme">@style/GreyTheme</item>
    </style>

    <style name="Button.Primary">
        <item name="theme">@style/BlueTheme</item>
    </style>
    <!--endregion-->

    <!--region Secondary (Outline Primary)-->
    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:minHeight">@dimen/ds_button_height</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/icon_button</item>
    </style>

    <style name="Button.Outlined.Grey" parent="Button.Secondary">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/neutral_400</item>
        <item name="strokeColor">@color/neutral_400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:minHeight">@dimen/ds_button_height</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/icon_button</item>
    </style>

    <style name="Button.Outlined.Blue" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ajaibPrimary</item>
        <item name="strokeColor">@color/ajaibPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:minHeight">@dimen/ds_button_height</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button.Secondary.Red">
        <item name="strokeColor">@color/redPrimary</item>
        <item name="theme">@style/RedTheme</item>
    </style>

    <style name="Button.Secondary.Large">
        <item name="android:textAppearance">@style/Text.Button.Large</item>
        <item name="android:minHeight">@dimen/ds_button_height_large</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="iconSize">@dimen/icon_button_large</item>
    </style>

    <style name="Button.Secondary.LargeAlt">
        <item name="android:textAppearance">@style/Text.Button.LargeAlt</item>
        <item name="android:minHeight">@dimen/ds_button_height_xlarge</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="iconSize">@dimen/icon_button_large</item>
    </style>

    <style name="Button.Secondary.Small">
        <item name="android:textAppearance">@style/Text.Button.Small</item>
        <item name="android:minHeight">@dimen/ds_button_height_small</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
        <item name="iconSize">@dimen/icon_button_small</item>
    </style>

    <style name="Button.Secondary.Small.Round">
        <item name="android:radius">@dimen/dp_16</item>
    </style>
    <!--endregion-->

    <!--region Tertiary (Outline Grey)-->
    <style name="Button.Tertiary" parent="Button.Secondary">
        <item name="strokeColor">@color/neutral_400</item>
        <item name="theme">@style/GreyTheme</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/icon_button</item>
    </style>

    <style name="Button.Tertiary.Large">
        <item name="android:textAppearance">@style/Text.Button.Large</item>
        <item name="android:minHeight">@dimen/ds_button_height_large</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="iconSize">@dimen/icon_button_large</item>
    </style>

    <style name="Button.Tertiary.Small">
        <item name="android:textAppearance">@style/Text.Button.Small</item>
        <item name="android:minHeight">@dimen/ds_button_height_small</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
        <item name="iconSize">@dimen/icon_button_small</item>
    </style>
    <!--endregion-->

    <!--region Quaternary (No Outline)-->
    <style name="Button.Quaternary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:minHeight">@dimen/ds_button_height</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:clickable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/icon_button</item>
    </style>

    <style name="Button.Quaternary.Normal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button.Quaternary.Large">
        <item name="android:textAppearance">@style/Text.Button.Large</item>
        <item name="android:minHeight">@dimen/ds_button_height_large</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="iconSize">@dimen/icon_button_large</item>
    </style>

    <style name="Button.Quaternary.LargeAlt">
        <item name="android:textAppearance">@style/Text.Button.LargeAlt</item>
        <item name="android:minHeight">@dimen/ds_button_height_xlarge</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="iconSize">@dimen/icon_button_large</item>
    </style>

    <style name="Button.Quaternary.Small">
        <item name="android:textAppearance">@style/Text.Button.Small</item>
        <item name="android:minHeight">@dimen/ds_button_height_small</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
        <item name="iconSize">@dimen/icon_button_small</item>
    </style>
    <!--endregion-->

    <style name="Button.Link" parent="Button.Quaternary.Small">
        <item name="android:letterSpacing">0.03</item>
        <item name="android:paddingStart">@dimen/dp_4</item>
        <item name="android:paddingEnd">@dimen/dp_4</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>
    <style name="Button.Link.NoPadding" parent="Button.Link">
        <item name="android:padding">@dimen/dp_0</item>
    </style>

    <style name="Button.Link.Normal" parent="Button.Quaternary.Small">
        <item name="android:textAppearance">@style/Text.Button.Small.Light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:paddingStart">@dimen/dp_4</item>
        <item name="android:paddingEnd">@dimen/dp_4</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="Button.Popup.Positive" parent="Button" />

    <style name="Button.Popup.Negative" parent="Button.Tertiary" />

    <style name="Button.Toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Text.Button.Small</item>
        <item name="android:minHeight">@dimen/ds_button_height_small</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
        <item name="android:minWidth">0dp</item>
    </style>
    <!--endregion-->

    <!--region Tabs-->
    <style name="Tabs">
        <item name="tabIndicatorHeight">@dimen/dp_2</item>
        <item name="tabTextAppearance">@style/Text.Tab</item>
        <item name="android:height">@dimen/tab_height</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="Tabs.Primary">
        <item name="android:background">@color/tab_primary_background</item>
        <item name="tabIndicatorColor">@color/tab_primary_indicator</item>
        <item name="tabSelectedTextColor">@color/tab_primary_text_selected</item>
        <item name="tabTextColor">@color/tab_primary_text</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Tabs.Secondary">
        <item name="android:background">@color/tab_secondary_background</item>
        <item name="tabIndicatorColor">@color/tab_secondary_indicator</item>
        <item name="tabTextColor">@color/tab_secondary_text</item>
        <item name="tabSelectedTextColor">@color/tab_secondary_text_selected</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Tabs.Tertiary" />
    <!--endregion-->

    <!--region Card-->
    <style name="Card">
        <item name="android:foreground">@drawable/bg_selectable_rounded_8</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="android:background">@drawable/bg_card_normal_rounded_8</item>
    </style>

    <style name="Card.4">
        <item name="android:foreground">@drawable/bg_selectable_rounded</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="android:background">@drawable/bg_card_normal_rounded</item>
    </style>

    <style name="Card.Special">
        <item name="android:foreground">@drawable/bg_selectable_rounded_8</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="android:background">@drawable/bg_card_rounded_8</item>
    </style>

    <style name="Card.Flat" parent="Card">
        <item name="android:elevation">@dimen/dp_0</item>
    </style>

    <style name="Card.Flat.Special" parent="Card.Special">
        <item name="android:elevation">@dimen/dp_0</item>
    </style>

    <style name="Card.Stroke" parent="Card">
        <item name="android:background">@drawable/bg_card_stroke_rounded_8</item>
    </style>

    <style name="Card.Stroke.Special" parent="Card.Stroke">
        <item name="android:background">@drawable/bg_card_special_stroke_rounded_8</item>
    </style>

    <style name="Card.Stroke.Flat" parent="Card.Stroke">
        <item name="android:elevation">@dimen/dp_0</item>
    </style>

    <style name="Card.Stroke.Flat.Special" parent="Card.Stroke.Flat">
        <item name="android:background">@drawable/bg_card_special_stroke_rounded_8</item>
        <item name="android:elevation">@dimen/dp_0</item>
    </style>

    <!--endregion Card-->

    <!--region Dropdown-->
    <style name="Dropdown">
        <item name="android:foreground">@drawable/bg_selectable_rounded_8</item>
        <item name="android:background">@drawable/bg_dropdown</item>
    </style>

    <style name="Dropdown.Stroke" parent="Dropdown">
        <item name="android:background">@drawable/bg_dropdown_stroke</item>
    </style>
    <!--endregion Dropdown-->

    <!--region ChartMarker-->
    <style name="ChartMarker">
        <item name="android:background">@drawable/bg_chart_marker</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="android:paddingStart">@dimen/dp_12</item>
        <item name="android:paddingEnd">@dimen/dp_12</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
    </style>
    <!--endregion ChartMarker-->

    <!--region Snackbar-->
    <style name="Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="SnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <!--endregion Snackbar-->

</resources>
